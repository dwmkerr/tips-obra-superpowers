{
  "name": "tips",
  "version": "0.1.0",
  "description": "CLI tool for saving and recalling useful tricks and shortcuts",
  "type": "module",
  "bin": {
    "tips": "dist/index.js",
    "tip": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsc --watch",
    "start": "node --no-warnings dist/index.js",
    "clean": "rm -rf dist coverage",
    "lint": "eslint --fix . && prettier --write .",
    "lint:check": "eslint . && prettier --check .",
    "test": "jest --coverage"
  },
  "keywords": [
    "cli",
    "tips",
    "shortcuts",
    "productivity"
  ],
  "author": "Dave Kerr",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.19.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
